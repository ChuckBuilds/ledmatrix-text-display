{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable or disable the text display plugin"
    },
    "text": {
      "type": "string",
      "default": "Hello, World!",
      "description": "The text message to display"
    },
    "font_path": {
      "type": "string",
      "default": "assets/fonts/PressStart2P-Regular.ttf",
      "description": "Path to font file (TTF or BDF)"
    },
    "font_size": {
      "type": "number",
      "default": 8,
      "minimum": 4,
      "maximum": 32,
      "description": "Font size in pixels"
    },
    "scroll": {
      "type": "boolean",
      "default": true,
      "description": "Enable scrolling animation for text"
    },
    "scroll_speed": {
      "type": "number",
      "default": 30,
      "minimum": 1,
      "maximum": 200,
      "description": "Scroll speed in pixels per second"
    },
    "scroll_gap_width": {
      "type": "number",
      "default": 32,
      "minimum": 0,
      "description": "Gap width in pixels between scroll loops"
    },
    "text_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [255, 255, 255],
      "description": "RGB text color [R, G, B]"
    },
    "background_color": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 255
      },
      "minItems": 3,
      "maxItems": 3,
      "default": [0, 0, 0],
      "description": "RGB background color [R, G, B]"
    },
    "display_duration": {
      "type": "number",
      "default": 10,
      "minimum": 1,
      "description": "How long to display in seconds (for non-scrolling or one complete scroll)"
    }
  },
  "required": ["enabled", "text"]
}

